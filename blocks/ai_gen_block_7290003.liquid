<script>
  (function() {
    const container = document.getElementById('scroll-container-{{ ai_gen_id }}');
    const prevBtn = document.getElementById('prev-btn-{{ ai_gen_id }}');
    const nextBtn = document.getElementById('next-btn-{{ ai_gen_id }}');

    if (!container || !prevBtn || !nextBtn) return;

    const scrollAmount = {{ block.settings.card_width_mobile | plus: block.settings.card_spacing }};

    function updateButtons() {
      const maxScrollLeft = container.scrollWidth - container.clientWidth;

      if (container.scrollLeft <= 0) {
        prevBtn.classList.add('ai-shop-categories-nav-disabled-{{ ai_gen_id }}');
      } else {
        prevBtn.classList.remove('ai-shop-categories-nav-disabled-{{ ai_gen_id }}');
      }

      if (container.scrollLeft >= maxScrollLeft - 1) {
        nextBtn.classList.add('ai-shop-categories-nav-disabled-{{ ai_gen_id }}');
      } else {
        nextBtn.classList.remove('ai-shop-categories-nav-disabled-{{ ai_gen_id }}');
      }
    }

    prevBtn.addEventListener('click', function() {
      container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', function() {
      container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });

    container.addEventListener('scroll', updateButtons);

    // Initial check
    if (container.scrollWidth <= container.clientWidth) {
      prevBtn.style.display = 'none';
      nextBtn.style.display = 'none';
    }

    updateButtons();
  })();
</script>

