      padding-left: calc({{ block.settings.question_padding | times: 0.8 }}px + {{ block.settings.number_size | times: 0.85 }}px + 12px);
      font-size: {{ block.settings.answer_size | times: 0.95 }}px;
    }
  }
{% endstyle %}

<ai-faq-accordion-{{ ai_gen_id }} class="ai-faq-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-faq-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-faq-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-faq-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-faq-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-faq-list-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% assign question_key = 'question_' | append: i %}
        {% assign answer_key = 'answer_' | append: i %}
        {% assign question = block.settings[question_key] %}
        {% assign answer = block.settings[answer_key] %}
        
        {% if question != blank %}
          <div 
            class="ai-faq-item-{{ ai_gen_id }} {% if forloop.first and block.settings.open_first %}active{% endif %}" 
            data-faq-item="{{ i }}"
          >
            <button
              class="ai-faq-question-wrapper-{{ ai_gen_id }}"
              aria-expanded="{% if forloop.first and block.settings.open_first %}true{% else %}false{% endif %}"
              aria-controls="ai-faq-answer-{{ ai_gen_id }}-{{ i }}"
              type="button"
            >
              <div class="ai-faq-number-{{ ai_gen_id }}">{{ forloop.index }}</div>
              <h3 class="ai-faq-question-{{ ai_gen_id }}">{{ question }}</h3>
              <svg class="ai-faq-chevron-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>
            <div 
              class="ai-faq-answer-wrapper-{{ ai_gen_id }}"
              id="ai-faq-answer-{{ ai_gen_id }}-{{ i }}"
              role="region"
              aria-labelledby="ai-faq-question-{{ ai_gen_id }}-{{ i }}"
            >
              <div class="ai-faq-answer-{{ ai_gen_id }}">
                {{ answer }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</ai-faq-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class AiFaqAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.items = [];
      }

      connectedCallback() {
        this.initAccordion();
      }

      initAccordion() {
        const faqItems = this.querySelectorAll('.ai-faq-item-{{ ai_gen_id }}');
        
        faqItems.forEach((item, index) => {
          const button = item.querySelector('.ai-faq-question-wrapper-{{ ai_gen_id }}');
          const answerWrapper = item.querySelector('.ai-faq-answer-wrapper-{{ ai_gen_id }}');
          const answer = item.querySelector('.ai-faq-answer-{{ ai_gen_id }}');
          
          this.items.push({ item, button, answerWrapper, answer });
          
          if (item.classList.contains('active')) {
            answerWrapper.style.maxHeight = answer.scrollHeight + 'px';
          }
          
          button.addEventListener('click', () => this.toggleItem(index));
        });

        window.addEventListener('resize', () => this.updateHeights());
      }

      toggleItem(index) {
        const currentItem = this.items[index];
        const isActive = currentItem.item.classList.contains('active');
        
        this.items.forEach((item, i) => {
          if (i !== index) {
            item.item.classList.remove('active');
            item.answerWrapper.style.maxHeight = '0';
            item.button.setAttribute('aria-expanded', 'false');
          }
        });
        
        if (isActive) {
          currentItem.item.classList.remove('active');
          currentItem.answerWrapper.style.maxHeight = '0';
          currentItem.button.setAttribute('aria-expanded', 'false');
        } else {
          currentItem.item.classList.add('active');
          currentItem.answerWrapper.style.maxHeight = currentItem.answer.scrollHeight + 'px';
          currentItem.button.setAttribute('aria-expanded', 'true');
        }
      }

      updateHeights() {
        this.items.forEach(item => {
          if (item.item.classList.contains('active')) {
            item.answerWrapper.style.maxHeight = item.answer.scrollHeight + 'px';
          }
        });
      }
    }

    customElements.define('ai-faq-accordion-{{ ai_gen_id }}', AiFaqAccordion{{ ai_gen_id }});
  })();
</script>

