{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-faq-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-faq-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-faq-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-faq-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-faq-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .ai-faq-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-faq-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.item_background }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    transition: all 0.3s ease;
  }

  .ai-faq-question-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: {{ block.settings.question_padding }}px;
    cursor: pointer;
    background-color: {{ block.settings.question_background }};
    transition: background-color 0.3s ease;
    border: none;
    width: 100%;
    text-align: left;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-faq-question-wrapper-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.question_hover_background }};
  }

  .ai-faq-number-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.number_size }}px;
    height: {{ block.settings.number_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.number_background }};
    color: {{ block.settings.number_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: {{ block.settings.number_font_size }}px;
  }

  .ai-faq-question-{{ ai_gen_id }} {
    flex: 1;
    font-size: {{ block.settings.question_size }}px;
    font-weight: 600;
    color: {{ block.settings.question_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-faq-chevron-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
    color: {{ block.settings.chevron_color }};
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-chevron-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-faq-answer-wrapper-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }

  .ai-faq-answer-{{ ai_gen_id }} {
    padding: 0 {{ block.settings.question_padding }}px {{ block.settings.question_padding }}px;
    padding-left: calc({{ block.settings.question_padding }}px + {{ block.settings.number_size }}px + 16px);
    font-size: {{ block.settings.answer_size }}px;
    color: {{ block.settings.answer_color }};
    line-height: 1.6;
  }

  .ai-faq-answer-{{ ai_gen_id }} p {
    margin: 0 0 12px;
  }

  .ai-faq-answer-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-faq-section-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px 16px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }

    .ai-faq-header-{{ ai_gen_id }} {
