

{%- assign block_settings = block.settings -%}

{% capture title %}
  {% content_for 'block', id: 'heading', type: '_heading', text: article.title %}
{% endcapture %}

{% capture details %}
  {% content_for 'block',
    id: 'blog-post-details',
    type: '_blog-post-info-text',
    alignment: block_settings.alignment,
    article: article
  %}
{% endcapture %}

{% capture description %}
  {% content_for 'block', id: 'content', type: '_blog-post-description', article: article, show_read_more: true %}
{% endcapture %}

<div
  class="blog-post-card"
  style="--text-align: {{ block_settings.alignment }}"
>
  {%- if article.image -%}
    <div class="blog-post-card__image-container">
      <a href="{{ article.url }}">
        {% content_for 'block', id: 'image', type: '_blog-post-image', image: article.image %}
      </a>
    </div>
  {%- endif -%}

  <div class="blog-post-card__content">
    <div class="blog-post-card__meta">
      {{ details }}
    </div>

    <h3 class="blog-post-card__title">
       <a href="{{ article.url }}">{{ title }}</a>
    </h3>

    <div class="blog-post-card__excerpt">
      {{ description }}
    </div>
    
    <a href="{{ article.url }}" class="blog-post-card__read-more">
      Read More &rarr;
    </a>
  </div>
</div>

{% stylesheet %}
  .blog-post-card {
    background-color: #FFFFFF;
    border: 1px solid #F0F0F0;
    border-radius: 10px;
    padding: 16px;
    display: flex;
    flex-direction: column;
    text-align: var(--text-align);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    height: 100%;
    min-height: 380px; /* Reduced from product card 480px since no buttons */
  }

  .blog-post-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .blog-post-card__image-container {
    position: relative;
    margin-bottom: 16px;
    border-radius: 10px;
    overflow: hidden;
    aspect-ratio: 3 / 2; /* Standard blog aspect ratio */
  }

  .blog-post-card__image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .blog-post-card:hover .blog-post-card__image-container img {
    transform: scale(1.05); /* Slight zoom on hover */
  }

  .blog-post-card__content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    gap: 8px;
  }

  .blog-post-card__meta {
    font-size: 12px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
  }

  .blog-post-card__title {
    margin: 0;
    font-size: 18px;
    font-weight: 700;
    line-height: 1.3;
  }

  .blog-post-card__title a {
    color: #000000;
    text-decoration: none;
    transition: color 0.2s;
  }

  .blog-post-card__title a:hover {
    color: #40C4FF; /* Accent color from product card */
  }

  .blog-post-card__excerpt {
    font-size: 14px;
    color: #444;
    line-height: 1.5;
    margin-top: 8px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1; /* Pushes button down if we had one */
  }
  
  .blog-post-card__read-more {
    display: inline-block;
    margin-top: 16px;
    font-size: 14px;
    font-weight: 600;
    color: #40C4FF;
    text-decoration: none;
    transition: transform 0.2s ease;
  }
  
  .blog-post-card__read-more:hover {
    transform: translateX(4px);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.blog_post",
  "settings": [
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "t:settings.alignment",
      "default": "left"
    }
  ]
}
{% endschema %}
