{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    overflow: hidden;
    display: block;
  }

  .ai-hero-slider__viewport-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-hero-slider__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .ai-hero-slider__slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.background_color }};
    text-decoration: none;
    color: inherit;
  }

  .ai-hero-slider__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-slider__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }

  .ai-hero-slider__desktop-image-{{ ai_gen_id }} {
    display: block;
  }

  .ai-hero-slider__mobile-image-{{ ai_gen_id }} {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slider__desktop-image-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-slider__mobile-image-{{ ai_gen_id }} {
      display: block;
    }
  }

  .ai-hero-slider__placeholder-{{ ai_gen_id }} {
    width: 100%;
    min-height: 400px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-slider__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 400px;
  }

  .ai-hero-slider__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-slider__content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: {{ block.settings.text_color }};
    z-index: 2;
    width: 90%;
    max-width: 800px;
  }

  .ai-hero-slider__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slider__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slider__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
  }

  .ai-hero-slider__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-hero-slider__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 3;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: opacity 0.3s ease;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    transition: background-color 0.3s ease;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}--prev {
    left: 20px;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}--next {
    right: 20px;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  @media screen and (max-width: 749px) {
