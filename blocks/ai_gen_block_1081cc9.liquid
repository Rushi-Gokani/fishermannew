      right: 10px;
    }
  }
{% endstyle %}

<hero-slider-{{ ai_gen_id }} class="ai-hero-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-slider__viewport-{{ ai_gen_id }}">
    <div class="ai-hero-slider__track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign heading_key = 'heading_' | append: i
          assign subheading_key = 'subheading_' | append: i
          assign button_text_key = 'button_text_' | append: i
          assign button_link_key = 'button_link_' | append: i
          assign show_content_key = 'show_content_' | append: i

          assign current_image = block.settings[image_key]
          assign current_heading = block.settings[heading_key]
          assign current_subheading = block.settings[subheading_key]
          assign current_button_text = block.settings[button_text_key]
          assign current_button_link = block.settings[button_link_key]
          assign current_show_content = block.settings[show_content_key]
        %}

        {% if current_image != blank or forloop.first %}
          {% if current_button_link != blank %}
            <a href="{{ current_button_link }}" class="ai-hero-slider__slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}">
          {% else %}
            <div class="ai-hero-slider__slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}">
          {% endif %}
            <div class="ai-hero-slider__image-wrapper-{{ ai_gen_id }}">
              {% liquid
                assign mobile_image_key = 'mobile_image_' | append: i
                assign current_mobile_image = block.settings[mobile_image_key]
              %}

              {% if current_image %}
                <img
                  src="{{ current_image | image_url: width: 2400 }}"
                  alt="{{ current_image.alt | escape }}"
                  loading="lazy"
                  width="{{ current_image.width }}"
                  height="{{ current_image.height }}"
                  class="ai-hero-slider__image-{{ ai_gen_id }} ai-hero-slider__desktop-image-{{ ai_gen_id }}"
                >
              {% endif %}

              {% if current_mobile_image %}
                <img
                  src="{{ current_mobile_image | image_url: width: 1200 }}"
                  alt="{{ current_mobile_image.alt | escape }}"
                  loading="lazy"
                  width="{{ current_mobile_image.width }}"
                  height="{{ current_mobile_image.height }}"
                  class="ai-hero-slider__image-{{ ai_gen_id }} ai-hero-slider__mobile-image-{{ ai_gen_id }}"
                >
              {% elsif current_image == blank %}
                <div class="ai-hero-slider__placeholder-{{ ai_gen_id }}">
                  {{ 'hero-apparel-1' | placeholder_svg_tag }}
                  <div class="ai-hero-slider__empty-state-{{ ai_gen_id }}">
                    Add an image to slide {{ forloop.index }}
                  </div>
                </div>
              {% endif %}
            </div>

            {% if current_show_content %}
              <div class="ai-hero-slider__content-{{ ai_gen_id }}">
                {% if current_heading != blank %}
                  <h2 class="ai-hero-slider__heading-{{ ai_gen_id }}">{{ current_heading }}</h2>
                {% endif %}

                {% if current_subheading != blank %}
                  <p class="ai-hero-slider__subheading-{{ ai_gen_id }}">{{ current_subheading }}</p>
                {% endif %}


              </div>
            {% endif %}
          {% if current_button_link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>

  {% if block.settings.show_arrows %}
    <button class="ai-hero-slider__arrow-{{ ai_gen_id }} ai-hero-slider__arrow-{{ ai_gen_id }}--prev" aria-label="Previous slide">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
    <button class="ai-hero-slider__arrow-{{ ai_gen_id }} ai-hero-slider__arrow-{{ ai_gen_id }}--next" aria-label="Next slide">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  {% endif %}

  {% if block.settings.show_dots %}
    <div class="ai-hero-slider__controls-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign current_image = block.settings[image_key]
        %}
        {% if current_image != blank or forloop.first %}
          <button class="ai-hero-slider__dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</hero-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slideCount = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-hero-slider__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-hero-slider__slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-hero-slider__dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-hero-slider__arrow-{{ ai_gen_id }}--prev');
        this.nextButton = this.querySelector('.ai-hero-slider__arrow-{{ ai_gen_id }}--next');
        this.slideCount = this.slides.length;

        if (this.slideCount <= 1) {
          if (this.prevButton) this.prevButton.style.display = 'none';
          if (this.nextButton) this.nextButton.style.display = 'none';
          return;
        }

        this.setupEventListeners();
        this.startAutoplay();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => this.startAutoplay());
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slideCount;
        this.updateSlider();
      }

      previousSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.slideCount) % this.slideCount;
        this.updateSlider();
      }

      updateSlider() {
        const offset = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${offset}%)`;

        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        const autoplayEnabled = {{ block.settings.autoplay | json }};
        const autoplaySpeed = {{ block.settings.autoplay_speed | times: 1000 }};

        if (autoplayEnabled && this.slideCount > 1) {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, autoplaySpeed);
        }
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('hero-slider-{{ ai_gen_id }}', HeroSlider{{ ai_gen_id }});
  })();
</script>

