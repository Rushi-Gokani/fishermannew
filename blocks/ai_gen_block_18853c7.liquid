<script>
  (function() {
    class UgcGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const links = this.querySelectorAll('.ai-ugc-gallery__link-{{ ai_gen_id }}[href]');
        links.forEach(link => {
          if (!link.getAttribute('aria-label')) {
            link.setAttribute('aria-label', 'View user generated content');
          }
        });
      }
    }

    customElements.define('ugc-gallery-{{ ai_gen_id }}', UgcGallery{{ ai_gen_id }});
  })();
</script>

