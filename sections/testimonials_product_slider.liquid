{% comment %}
  Testimonials Product Slider Section
  Split-column testimonial cards with product association
{% endcomment %}

{% liquid
  assign section_heading = section.settings.heading
  assign section_width = section.settings.section_width
  assign total_testimonials = section.blocks.size
%}

<style>
  #testimonials-product-slider-{{ section.id }} {
    padding: var(--section-padding-top, 60px) 0 var(--section-padding-bottom, 60px);
  }

  #testimonials-product-slider-{{ section.id }} .tps-wrapper {
    {% if section_width == 'full-width' %}
      max-width: 100%;
      padding: 0 40px;
    {% else %}
      max-width: 1440px;
      margin: 0 auto;
      padding: 0 20px;
    {% endif %}
  }

  /* Header with title and nav arrows */
  #testimonials-product-slider-{{ section.id }} .tps-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  #testimonials-product-slider-{{ section.id }} .tps-title {
    font-size: 32px;
    color: rgb(var(--color-foreground));
    margin: 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  #testimonials-product-slider-{{ section.id }} .tps-nav {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  #testimonials-product-slider-{{ section.id }} .tps-nav-btn {
    width: 40px;
    height: 40px;
    border: 1px solid rgba(var(--color-foreground), 0.15);
    border-radius: 50%;
    
    background: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    color: rgb(var(--color-foreground));
  }

  #testimonials-product-slider-{{ section.id }} .tps-nav-btn:hover {
    background: rgba(var(--color-foreground), 0.05);
    border-color: rgba(var(--color-foreground), 0.25);
  }

  #testimonials-product-slider-{{ section.id }} .tps-nav-btn:focus-visible {
    outline: 2px solid rgb(var(--color-foreground));
    outline-offset: 2px;
  }

  #testimonials-product-slider-{{ section.id }} .tps-nav-btn svg {
    width: 18px;
    height: 18px;
  }

  #testimonials-product-slider-{{ section.id }} .tps-nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  /* Slider container */
  #testimonials-product-slider-{{ section.id }} .tps-slider-container {
    position: relative;
    overflow: hidden;
    margin: 0 -10px;
  }

  #testimonials-product-slider-{{ section.id }} .tps-slider-track {
    display: flex;
    transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    gap: 20px;
    padding: 0 10px;
  }

  /* Card Styles */
  #testimonials-product-slider-{{ section.id }} .tps-card {
    flex: 0 0 calc(33.333% - 14px);
    min-width: 0;
    background: #ffffff;
    border: 1px solid #e6e6e6;
    border-radius: 12px;
    
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    display: flex;
    overflow: hidden;
  }

  /* Left side - Review */
  #testimonials-product-slider-{{ section.id }} .tps-card-review {
    flex: 1;
    padding: 24px 20px;
    display: flex;
    flex-direction: column;
    border-right: 1px solid #e6e6e6;
  }

  #testimonials-product-slider-{{ section.id }} .tps-stars {
    display: flex;
    gap: 3px;
    margin-bottom: 14px;
  }

  #testimonials-product-slider-{{ section.id }} .tps-star {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  #testimonials-product-slider-{{ section.id }} .tps-star.filled svg {
    fill: #FFB800;
  }

  #testimonials-product-slider-{{ section.id }} .tps-star.empty svg {
    fill: rgba(var(--color-foreground), 0.15);
  }

  #testimonials-product-slider-{{ section.id }} .tps-review-text {
    font-size: 14px;
    line-height: 1.6;
    color: rgba(var(--color-foreground), 0.75);
    margin: 0 0 18px;
    flex-grow: 1;
  }

  #testimonials-product-slider-{{ section.id }} .tps-reviewer {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  #testimonials-product-slider-{{ section.id }} .tps-reviewer-name {
    font-size: 14px;
    font-weight: 600;
    color: rgb(var(--color-foreground));
    margin: 0;
  }



  /* Right side - Product */
  #testimonials-product-slider-{{ section.id }} .tps-card-product {
    flex: 0 0 110px;
    padding: 24px 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background: rgba(var(--color-background), 0.5);
  }

  #testimonials-product-slider-{{ section.id }} .tps-product-link {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    width: 100%;
  }

  #testimonials-product-slider-{{ section.id }} .tps-product-image {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    
    overflow: hidden;
    background: rgba(var(--color-foreground), 0.05);
    flex-shrink: 0;
  }

  #testimonials-product-slider-{{ section.id }} .tps-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  #testimonials-product-slider-{{ section.id }} .tps-product-link:hover .tps-product-image img {
    transform: scale(1.05);
  }

  #testimonials-product-slider-{{ section.id }} .tps-product-title {
    font-size: 13px;
    font-weight: 600;
    color: rgb(var(--color-foreground));
    text-align: center;
    margin: 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  #testimonials-product-slider-{{ section.id }} .tps-product-link:hover .tps-product-title {
    color: rgba(var(--color-foreground), 0.7);
  }

  /* Tablet - 2 cards */
  @media screen and (max-width: 991px) {
    #testimonials-product-slider-{{ section.id }} .tps-card {
      flex: 0 0 calc(50% - 10px);
    }

    #testimonials-product-slider-{{ section.id }} .tps-wrapper {
      padding: 0 20px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-slider-container {
      margin: 0 -5px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-slider-track {
      gap: 10px;
      padding: 0 5px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-card-product {
      flex: 0 0 90px;
      padding: 20px 12px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-product-image {
      width: 60px;
      height: 60px;
    }


  }

  /* Mobile - 1 card */
  @media screen and (max-width: 599px) {
    #testimonials-product-slider-{{ section.id }} {
      padding: 40px 0;
    }

    #testimonials-product-slider-{{ section.id }} .tps-wrapper {
      padding: 0 15px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-header {
      margin-bottom: 24px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-title {
      font-size: 24px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-slider-container {
      margin: 0;
    }

    #testimonials-product-slider-{{ section.id }} .tps-slider-track {
      padding: 0;
      gap: 15px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-card {
      flex: 0 0 100%;
      min-height: auto;
    }

    #testimonials-product-slider-{{ section.id }} .tps-card-review {
      padding: 20px 16px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-card-product {
      flex: 0 0 85px;
      padding: 20px 12px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-review-text {
      font-size: 13px;
      margin-bottom: 14px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-reviewer-name {
      font-size: 13px;
    }

    #testimonials-product-slider-{{ section.id }} .tps-product-title {
      font-size: 12px;
    }
  }
</style>

<section
  id="testimonials-product-slider-{{ section.id }}"
  class="testimonials-product-slider color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px;"
  {{ section.shopify_attributes }}
>
  <div class="tps-wrapper">
    <div class="tps-header">
      {% if section_heading != blank %}
        <h2 class="tps-title">{{ section_heading }}</h2>
      {% else %}
        <h2 class="tps-title">Testimonials</h2>
      {% endif %}
      <div class="tps-nav">
        <button
          class="tps-nav-btn tps-prev"
          aria-label="Previous testimonials"
          data-section-id="{{ section.id }}"
          tabindex="0"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button
          class="tps-nav-btn tps-next"
          aria-label="Next testimonials"
          data-section-id="{{ section.id }}"
          tabindex="0"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    </div>

    <div class="tps-slider-container">
      <div class="tps-slider-track" id="tps-track-{{ section.id }}">
        {% for block in section.blocks %}
          {% if block.type == 'testimonial' %}
            <div class="tps-card" {{ block.shopify_attributes }}>
              <!-- Left: Review -->
              <div class="tps-card-review">
                {% if block.settings.rating > 0 %}
                  <div class="tps-stars">
                    {% for i in (1..5) %}
                      <span class="tps-star{% if i <= block.settings.rating %} filled{% else %} empty{% endif %}">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                      </span>
                    {% endfor %}
                  </div>
                {% endif %}

                {% if block.settings.review_text != blank %}
                  <p class="tps-review-text">{{ block.settings.review_text }}</p>
                {% endif %}

                <div class="tps-reviewer">
                  {% if block.settings.reviewer_name != blank %}
                    <p class="tps-reviewer-name">{{ block.settings.reviewer_name }}</p>
                  {% endif %}


                </div>
              </div>

              <!-- Right: Product -->
              <div class="tps-card-product">
                {% if block.settings.product_link != blank %}
                  <a href="{{ block.settings.product_link }}" class="tps-product-link" aria-label="View {{ block.settings.product_title }}">
                {% else %}
                  <div class="tps-product-link">
                {% endif %}

                {% if block.settings.product_image != blank %}
                  <div class="tps-product-image">
                    {{
                      block.settings.product_image
                      | image_url: width: 200
                      | image_tag: loading: 'lazy', alt: block.settings.product_title
                    }}
                  </div>
                {% else %}
                  <div class="tps-product-image">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}

                {% if block.settings.product_title != blank %}
                  <p class="tps-product-title">{{ block.settings.product_title }}</p>
                {% endif %}

                {% if block.settings.product_link != blank %}
                  </a>
                {% else %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    function initTestimonialsProductSlider(sectionId) {
      const track = document.getElementById('tps-track-' + sectionId);
      const prevBtn = document.querySelector('.tps-prev[data-section-id="' + sectionId + '"]');
      const nextBtn = document.querySelector('.tps-next[data-section-id="' + sectionId + '"]');

      if (!track || !prevBtn || !nextBtn) return;

      const cards = track.querySelectorAll('.tps-card');
      const totalCards = cards.length;

      if (totalCards === 0) return;

      let currentIndex = 0;

      function getVisibleItems() {
        const width = window.innerWidth;
        if (width <= 599) return 1;
        if (width <= 991) return 2;
        return 3;
      }

      function getMaxIndex() {
        const visible = getVisibleItems();
        return Math.max(0, totalCards - visible);
      }

      function updateSlider() {
        const visible = getVisibleItems();
        const cardWidth = cards[0].offsetWidth + 20; // card + gap
        const maxOffset = getMaxIndex() * cardWidth;
        const offset = Math.min(currentIndex * cardWidth, maxOffset);

        track.style.transform = 'translateX(-' + offset + 'px)';

        prevBtn.disabled = currentIndex === 0;
        nextBtn.disabled = currentIndex >= getMaxIndex();
      }

      function nextSlide() {
        const max = getMaxIndex();
        currentIndex = Math.min(currentIndex + 1, max);
        updateSlider();
      }

      function prevSlide() {
        currentIndex = Math.max(currentIndex - 1, 0);
        updateSlider();
      }

      prevBtn.addEventListener('click', prevSlide);
      nextBtn.addEventListener('click', nextSlide);

      // Keyboard navigation
      prevBtn.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          prevSlide();
        }
      });

      nextBtn.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          nextSlide();
        }
      });

      // Touch/swipe support
      let startX = 0;
      let currentTranslate = 0;
      let isDragging = false;

      track.addEventListener('touchstart', (e) => {
        startX = e.changedTouches[0].screenX;
        isDragging = true;
        track.style.transition = 'none';
      }, { passive: true });

      track.addEventListener('touchmove', (e) => {
        if (!isDragging) return;
        const currentX = e.changedTouches[0].screenX;
        const diff = startX - currentX;
        track.style.transform = 'translateX(calc(' + (-currentIndex * (cards[0].offsetWidth + 20)) + 'px - ' + diff + 'px))';
      }, { passive: true });

      track.addEventListener('touchend', (e) => {
        if (!isDragging) return;
        isDragging = false;
        track.style.transition = 'transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)';

        const endX = e.changedTouches[0].screenX;
        const diff = startX - endX;

        if (Math.abs(diff) > 50) {
          if (diff > 0) {
            nextSlide();
          } else {
            prevSlide();
          }
        } else {
          updateSlider();
        }
      }, { passive: true });

      // Update on resize
      let resizeTimeout;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          const max = getMaxIndex();
          if (currentIndex > max) {
            currentIndex = max;
          }
          updateSlider();
        }, 150);
      });

      // Initial state
      updateSlider();
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        initTestimonialsProductSlider('{{ section.id }}');
      });
    } else {
      initTestimonialsProductSlider('{{ section.id }}');
    }
  })();
</script>

