{% comment %}
  Product Card Section
  - Displays products in cards matching the design reference
  - Features: Best Seller badge, wishlist heart, image with dots, Buy Now button
{% endcomment %}

{% assign section_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .product-cards-section-{{ section_id }} {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .product-cards-container-{{ section_id }} {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  .product-cards-header-{{ section_id }} {
    text-align: {{ section.settings.heading_align }};
    margin-bottom: {{ section.settings.header_spacing }}px;
  }

  .product-cards-title-{{ section_id }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin: 0;
  }

  .product-cards-grid-{{ section_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax({{ section.settings.card_width }}px, 1fr));
    gap: {{ section.settings.grid_gap }}px;
  }

  .product-card-{{ section_id }} {
    background-color: {{ section.settings.card_bg_color }};
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .product-card-{{ section_id }}:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  /* Top section - Badge and Heart */
  .product-card-top-{{ section_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: {{ section.settings.top_spacing }}px;
  }

  .product-card-badge-{{ section_id }} {
    background-color: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.badge_text_color }};
    font-size: {{ section.settings.badge_size }}px;
    font-weight: {{ section.settings.badge_weight }};
    padding: {{ section.settings.badge_padding_v }}px {{ section.settings.badge_padding_h }}px;
    border-radius: {{ section.settings.badge_radius }}px;
  }

  .product-card-wishlist-{{ section_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
  }

  .product-card-wishlist-{{ section_id }}:hover {
    transform: scale(1.1);
  }

  .product-card-wishlist-{{ section_id }} svg {
    width: {{ section.settings.wishlist_size }}px;
    height: {{ section.settings.wishlist_size }}px;
    color: {{ section.settings.wishlist_color }};
    fill: {{ section.settings.wishlist_fill }};
  }

  .product-card-wishlist-{{ section_id }}.active svg {
    fill: {{ section.settings.wishlist_active_color }};
    color: {{ section.settings.wishlist_active_color }};
  }

  /* Image section */
  .product-card-image-wrapper-{{ section_id }} {
    position: relative;
    margin-bottom: {{ section.settings.image_spacing }}px;
  }

    border-radius: {{ section.settings.image_radius }}px;
  }

  .product-card-slider-wrapper-{{ section_id }} {
    position: relative;
    overflow: hidden;
    width: 100%;
    touch-action: pan-y;
  }

  .product-card-slider-container-{{ section_id }} {
    display: flex;
    width: 100%;
    transition: transform 0.3s ease-out;
  }

  .product-card-image-{{ section_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: contain;
    border-radius: {{ section.settings.image_radius }}px;
    flex-shrink: 0;
    flex-grow: 0;
    user-select: none;
    -webkit-user-drag: none;
  }

  /* Arrows */
  .product-card-arrow-{{ section_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    transition: all 0.2s ease;
    opacity: 1; /* Visible by default */
    visibility: visible;
  }

  .product-card-arrow-prev-{{ section_id }} {
    left: 8px;
  }

  .product-card-arrow-next-{{ section_id }} {
    right: 8px;
  }

  .product-card-arrow-{{ section_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .product-card-arrow-{{ section_id }} svg {
    width: 16px;
    height: 16px;
    color: #000000;
  }

  /* Pagination dots */
  .product-card-dots-{{ section_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ section.settings.dots_gap }}px;
    margin-top: {{ section.settings.dots_margin_top }}px;
  }

  .product-card-dot-{{ section_id }} {
    width: {{ section.settings.dot_size }}px;
    height: {{ section.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_inactive_color }};
    transition: background-color 0.3s ease;
  }

  .product-card-dot-{{ section_id }}.active {
    background-color: {{ section.settings.dot_active_color }};
  }

  /* Bottom section */
  .product-card-content-{{ section_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap }}px;
  }

  .product-card-brand-{{ section_id }} {
    font-size: {{ section.settings.brand_size }}px;
    font-weight: {{ section.settings.brand_weight }};
    color: {{ section.settings.brand_color }};
    margin: 0;
  }

  .product-card-title-{{ section_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .product-card-title-{{ section_id }} a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .product-card-title-{{ section_id }} a:hover {
    opacity: 0.7;
  }

  .product-card-price-{{ section_id }} {
    font-size: {{ section.settings.price_size }}px;
    font-weight: {{ section.settings.price_weight }};
    color: {{ section.settings.price_color }};
    margin: 0;
  }

  .product-card-price-{{ section_id }} .compare-price {
    text-decoration: line-through;
    opacity: 0.6;
    margin-left: 8px;
  }

  /* Buy Now button */
  .product-card-buy-btn-{{ section_id }} {
    width: 100%;
    background-color: #E1EDF5;
    color: {{ section.settings.btn_text_color }};
    font-size: {{ section.settings.btn_size }}px;
    font-weight: {{ section.settings.btn_weight }};
    border: none;
    border-radius: {{ section.settings.btn_radius }}px;
    padding: {{ section.settings.btn_padding_v }}px {{ section.settings.btn_padding_h }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: {{ section.settings.btn_margin_top }}px;
  }

  .product-card-buy-btn-{{ section_id }}:hover {
    opacity: 0.9;
    transform: scale(1.02);
  }

  /* Badges */
  .product-card-badges-{{ section_id }} {
    position: absolute;
    top: 8px;
    left: 8px;
    display: flex;
    flex-direction: column;
    gap: 4px;
    z-index: 2;
  }

  .product-card-sale-badge-{{ section_id }} {
    background-color: {{ section.settings.sale_badge_bg }};
    color: {{ section.settings.sale_badge_color }};
    font-size: 10px;
    font-weight: 700;
    padding: 4px 8px;
    border-radius: 4px;
    text-transform: uppercase;
  }

  .product-card-sold-out-badge-{{ section_id }} {
    background-color: {{ section.settings.sold_out_badge_bg }};
    color: {{ section.settings.sold_out_badge_color }};
    font-size: 10px;
    font-weight: 700;
    padding: 4px 8px;
    border-radius: 4px;
    text-transform: uppercase;
  }

  @media screen and (max-width: 749px) {
    .product-cards-grid-{{ section_id }} {
      grid-template-columns: repeat(auto-fill, minmax({{ section.settings.card_width_mobile }}px, 1fr));
      gap: {{ section.settings.grid_gap_mobile }}px;
    }

    .product-cards-title-{{ section_id }} {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    .product-card-title-{{ section_id }} {
      font-size: {{ section.settings.title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="product-cards-section-{{ section_id }}" {{ section.shopify_attributes }}>
  <div class="product-cards-container-{{ section_id }}">
    {% if section.settings.heading != blank %}
      <div class="product-cards-header-{{ section_id }}">
        <h2 class="product-cards-title-{{ section_id }}">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="product-cards-grid-{{ section_id }}">
      {% assign collection = collections[section.settings.collection] %}

      {% if collection != blank and collection.products_count > 0 %}
        {% for product in collection.products limit: section.settings.products_to_show %}
          {% render 'product-card-item',
            product: product,
            section_id: section_id,
            section_settings: section.settings,
            show_badge: section.settings.show_best_seller_badge,
            badge_text: section.settings.best_seller_text
          %}
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card-{{ section_id }}" style="padding-top: 16px;">
            {% if section.settings.show_best_seller_badge %}
              <div class="product-card-top-{{ section_id }}">
                <span class="product-card-badge-{{ section_id }}">{{ section.settings.best_seller_text }}</span>
              </div>
            {% endif %}

            <div class="product-card-image-wrapper-{{ section_id }}">
              {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'product-card-image-' | append: section_id }}
              <div class="product-card-dots-{{ section_id }}">
                <span class="product-card-dot-{{ section_id }} active"></span>
                <span class="product-card-dot-{{ section_id }}"></span>
                <span class="product-card-dot-{{ section_id }}"></span>
              </div>
            </div>

            <div class="product-card-content-{{ section_id }}">
              <p class="product-card-brand-{{ section_id }}">Brand Name</p>
              <h3 class="product-card-title-{{ section_id }}">
                <a href="#">{{ section.settings.product_title_example }}</a>
              </h3>
              <p class="product-card-price-{{ section_id }}">{{ section.settings.price_example }}</p>
              <button class="product-card-buy-btn-{{ section_id }}">Buy Now</button>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

