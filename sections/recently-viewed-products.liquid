{%- capture section_settings -%}
{
  "currentProductId": {{ product.id | json }}
}
{%- endcapture -%}

<section
  class="section"
  data-section-id="{{ section.id }}"
  data-section-type="recently-viewed-products"
  data-section-settings="{{ section_settings | escape_once }}"
  data-current-product-id="{{ product.id }}"
>
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h3">{{ section.settings.title | escape }}</h2>
      </header>
    {%- endif -%}

    {%- if request.page_type == 'search' and search.results_count > 0 -%}
      <div class="recently-viewed-grid">
        {%- assign parsed_terms = search.terms | split: ' OR ' -%}

        {%- for parsed_term in parsed_terms -%}
          {%- assign id = parsed_term | split: 'id:' | last | times: 1 -%}

          {%- for product in search.results -%}
            {%- if product.id == id -%}
              <div class="recently-viewed-grid__item">
                {%- render 'product-card-item',
                  product: product,
                  section_id: section.id,
                  section_settings: {
                    wishlist_fill: '#ffffff'
                  },
                  show_badge: product.tags contains 'best-seller',
                  badge_text: 'Best Seller'
                -%}
              </div>
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="recently-viewed-products-placeholder" aria-hidden="true">
        <div class="recently-viewed-products-placeholder__media"></div>
        <div class="recently-viewed-products-placeholder__media"></div>
        <div class="recently-viewed-products-placeholder__media"></div>
        <div class="recently-viewed-products-placeholder__media"></div>
      </div>
    {%- endif -%}
  </div>

  {%- comment -%}
  --------------------------------------------------------------------------------------
  QUICK VIEW CONTAINER
  --------------------------------------------------------------------------------------
  {%- endcomment -%}

  <div id="modal-quick-view-{{ section.id }}" class="modal" aria-hidden="true">
    <div class="modal__dialog modal__dialog--stretch" role="dialog">
      <button class="modal__close link" data-action="close-modal" title="{{ 'general.accessibility.close' | t | escape }}">
        {%- render 'icon', icon: 'close' -%}
      </button>

      <div class="modal__loader">
        {%- render 'icon', icon: 'search-loader' -%}
      </div>

      <div class="modal__inner"></div>
    </div>
  </div>
</section>

{% style %}
  #shopify-section-{{ section.id }} .recently-viewed-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 24px;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .recently-viewed-grid__item {
    height: 100%;
  }

  #shopify-section-{{ section.id }} .product-card-{{ section.id }} {
    background-color: #ffffff;
    border: 1px solid #f0f0f0;
    border-radius: 16px;
    padding: 16px;
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    min-height: 460px;
  }

  #shopify-section-{{ section.id }} .product-card-{{ section.id }}:hover {
    box-shadow: 0 10px 20px rgba(17, 24, 39, 0.1);
    transform: translateY(-4px);
  }

  #shopify-section-{{ section.id }} .product-card-top-{{ section.id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
  }

  #shopify-section-{{ section.id }} .product-card-badge-{{ section.id }} {
    background: #ffffff;
    color: #111;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 999px;
    border: 1px solid rgba(15, 23, 42, 0.08);
  }

  #shopify-section-{{ section.id }} .product-card-wishlist-{{ section.id }} {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .product-card-image-wrapper-{{ section.id }} {
    position: relative;
    margin-bottom: 12px;
    border-radius: 16px;
    overflow: hidden;
    background: #f8fafc;
  }

  #shopify-section-{{ section.id }} .product-card-slider-wrapper-{{ section.id }} {
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .product-card-slider-container-{{ section.id }} {
    display: flex;
    transition: transform 0.3s ease;
    width: 100%;
    cursor: grab;
  }

  #shopify-section-{{ section.id }} .product-card-image-{{ section.id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: contain;
    flex-shrink: 0;
    background: #fff;
  }

  #shopify-section-{{ section.id }} .product-card-arrow-{{ section.id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 12px rgba(15, 23, 42, 0.15);
    cursor: pointer;
  }

  #shopify-section-{{ section.id }} .product-card-arrow-prev-{{ section.id }} {
    left: 8px;
  }

  #shopify-section-{{ section.id }} .product-card-arrow-next-{{ section.id }} {
    right: 8px;
  }

  #shopify-section-{{ section.id }} .product-card-dots-{{ section.id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
    margin-top: 8px;
  }

  #shopify-section-{{ section.id }} .product-card-dot-{{ section.id }} {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.2);
  }

  #shopify-section-{{ section.id }} .product-card-dot-{{ section.id }}.active {
    background: #40c4ff;
  }

  #shopify-section-{{ section.id }} .product-card-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: 8px;
  }

  #shopify-section-{{ section.id }} .product-card-brand-{{ section.id }} {
    font-size: 0.8rem;
    letter-spacing: 0.02em;
    color: rgba(15, 23, 42, 0.65);
    margin: 0;
  }

  #shopify-section-{{ section.id }} .product-card-title-{{ section.id }} {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    color: #0f172a;
    min-height: 48px;
    line-height: 1.35;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .product-card-title-{{ section.id }} a {
    color: inherit;
    text-decoration: none;
  }

  #shopify-section-{{ section.id }} .product-card-price-{{ section.id }} {
    margin: 0;
    font-weight: 600;
    color: #0f172a;
  }

  #shopify-section-{{ section.id }} .product-card-price-{{ section.id }} .compare-price {
    margin-left: 8px;
    opacity: 0.5;
    text-decoration: line-through;
  }

  #shopify-section-{{ section.id }} .product-card-buy-form-{{ section.id }} {
    margin-top: auto;
  }

  #shopify-section-{{ section.id }} .product-card-buy-btn-{{ section.id }} {
    width: 100%;
    background: #40c4ff;
    color: #ffffff;
    border-radius: 999px;
    border: none;
    padding: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  #shopify-section-{{ section.id }} .product-card-buy-btn-{{ section.id }}:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(64, 196, 255, 0.4);
  }

  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .recently-viewed-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .recently-viewed-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 16px;
    }
  }

  @media (max-width: 600px) {
    #shopify-section-{{ section.id }} .product-card-{{ section.id }} {
      padding: 12px;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Recently viewed products",
  "settings": [
    {
      "type": "paragraph",
      "content": "Only be visible if at least one product has been viewed."
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Recently viewed"
    },
    {
      "type": "checkbox",
      "id": "show_quick_buy",
      "label": "Show quick buy",
      "default": false
    }
  ],
  "presets": [
    {
      "category": "Product",
      "name": "Recently viewed products"
    }
  ]
}
{% endschema %}
