    assign enable_cart_drawer = true
  endif
  assign category_blocks = section.blocks | where: 'type', 'category_group'
%}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

  .header-section {
    z-index: 5001 !important;
  }

  .custom-top-bar,
  .custom-header-section,
  .mobile-drawer {
    font-family: 'Space Grotesk', sans-serif;
    letter-spacing: -0.01em;
  }


  /* Top Bar */
  .custom-top-bar {
    background: #0f172a;
    color: #94a3b8;
    font-size: 12px;
    font-weight: 500;
    text-transform: none;
    padding: 8px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  .top-bar-left { font-weight: 600; }
  .top-bar-right, .top-bar-menu, .top-bar-social { 
    display: flex; 
    align-items: center; 
    gap: 20px; 
  }
  .top-bar-menu { list-style: none; padding: 0; margin: 0; gap: 15px; }
  .top-bar-menu a { color: inherit; text-decoration: none; transition: color 0.2s; }
  .top-bar-menu a:hover { color: #40c4ff; }
  .top-bar-social a { color: #94a3b8; transition: color 0.2s; }
  .top-bar-social a:hover { color: #40c4ff; }
  .top-bar-social svg { width: 14px; height: 14px; fill: currentColor; }

  /* Main Header Section */
  .custom-header-section {
    background: #40c4ff;
    color: #0f172a;
    position: relative;
    z-index: 1000;
    padding: 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .custom-header-section::before {
    content: '';
    position: absolute;
    width: 360px;
    height: 360px;
    top: -140px;
    left: -140px;
    border-radius: 999px;
    filter: blur(80px);
    opacity: 0.4;
    z-index: 0;
    background: radial-gradient(circle, #ffffff 0%, transparent 70%);
    pointer-events: none;
  }

  .custom-header-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 40px;
    height: 90px;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .header-layout {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    gap: 32px;
  }

  /* Branding */
  .header-branding {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    max-width: 250px;
  }
  .header-branding a { display: block; line-height: 0; }
  .header-branding img {
    max-width: {{ section.settings.logo_width }}px;
    height: auto;
    display: block;
    width: 100%;
  }
  .header-logo-text {
    font-size: 24px;
    font-weight: 800;
    color: #0f172a;
    text-decoration: none;
    letter-spacing: -0.02em;
    white-space: nowrap;
  }

  /* Navigation Cluster (Centered) */
  .nav-cluster {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 32px;
  }

  .categories-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .categories-btn {
    background: #ffffff;
    color: #40c4ff;
    border: 1px solid rgba(255, 255, 255, 0.4);
    padding: 10px 18px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 13px;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }
  .categories-btn:hover {
    background: #f8fafc;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
  }

  .main-nav .mega-nav__list {
    display: flex;
    gap: 32px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .mega-nav__link {
    color: #0f172a;
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    transition: color 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
  }
  .mega-nav__link:hover { color: #000000; opacity: 1; }

  /* Right Icons */
  .header-icons {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .icon-btn {
    background: transparent;
    border: none;
    color: #0f172a;
    cursor: pointer;
    padding: 8px;
    border-radius: 10px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    opacity: 0.9;
  }
  .icon-btn:hover {
    color: #000;
    background: rgba(255, 255, 255, 0.2);
    opacity: 1;
  }
  .icon-btn svg { width: 22px; height: 22px; stroke: currentColor; stroke-width: 2; fill: none; }
  .header-actions__cart-icon {
    position: absolute;
    top: -2px;
    right: -2px;
    transform: scale(0.8);
  }
  .cart-count-bubble { background-color: #ffffff; color: #40c4ff; }

  /* Megamenu Dropdown */
  .categories-dropdown {
    position: absolute;
    top: 100%; /* Position directly below */
    left: 0;
    transform: none;
    background: transparent; /* Transparent container */
    padding-top: 20px; /* Physical bridge for the gap */
    display: none;
    width: 850px;
    z-index: 1001;
  }
  
  .categories-dropdown-inner {
    background: #ffffff;
    backdrop-filter: blur(20px);
    color: #0f172a;
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
    border-radius: 20px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    overflow: hidden;
    display: flex;
    width: 100%;
  }

  /* .categories-dropdown::before removed safely */
  .categories-wrapper:hover .categories-dropdown { display: flex; }

  .dropdown-sidebar {
    background: #f8fafc;
    width: 240px;
    padding: 15px 0;
    border-right: 1px solid rgba(0, 0, 0, 0.05);
  }
  .sidebar-item {
    padding: 12px 24px;
    font-size: 14px;
    font-weight: 600;
    color: #64748b;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    transition: all 0.2s;
  }
  .sidebar-item.active, .sidebar-item:hover { 
    background: rgba(64, 196, 255, 0.1); 
    color: #40c4ff; 
    border-left: 3px solid #40c4ff; /* Active indicator */
  }

  .dropdown-content-area { flex: 1; min-height: 400px; background: transparent; }
  .custom-mega-panel { display: none; padding: 30px; justify-content: space-between; gap: 20px; width: 100%; }
  .menus-group { display: flex; gap: 30px; }
  .custom-mega-panel.active { display: flex; }
  .panel-column { flex: 0 0 auto; min-width: 120px; }
  .promo-column { width: 280px; flex-shrink: 0; }
  .panel-column h4 { font-size: 13px; text-transform: uppercase; letter-spacing: 0.1em; color: #40c4ff; margin-bottom: 15px; }
  .panel-column ul { list-style: none; padding: 0; margin: 0; }
  .panel-column li { margin-bottom: 8px; }
  .panel-column a { text-decoration: none; color: #0f172a; font-size: 14px; font-weight: 500; transition: color 0.2s; }
  .panel-column a:hover { color: #40c4ff; }

  .promo-card { position: relative; border-radius: 12px; overflow: hidden; display: block; height: 100%; border: 1px solid rgba(0,0,0,0.05); transition: transform 0.3s; }
  .promo-card:hover { transform: translateY(-5px); border-color: #40c4ff; }
  .promo-card img { width: 100%; height: 100%; object-fit: cover; }
  .promo-overlay { position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); display: flex; flex-direction: column; justify-content: flex-end; padding: 15px; color: #fff; }
  .promo-title { font-weight: 700; font-size: 16px; color: #40c4ff; }
  .promo-subtitle { font-size: 12px; opacity: 0.9; }

  /* Mobile */
  .header-mobile { display: none; width: 100%; align-items: center; justify-content: space-between; height: 70px; padding: 0 20px; }
  .header-mobile .header-branding { max-width: 90px; }
  .header-mobile .header-branding img { max-width: 100%; height: auto; }
  
  @media (max-width: 1024px) {
    .header-layout { display: none; }
    .header-mobile { display: flex; }
    .custom-header-container { height: auto; padding: 0; }
  }

  /* Premium Mobile Drawer */
  .mobile-drawer {
    position: fixed; 
    top: 0; 
    left: -100%; 
    width: 85%; 
    max-width: 400px;
    height: 100%; 
    background: #ffffff; 
    z-index: 2001; 
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1); 
    padding: 0;
    border-right: 1px solid rgba(0,0,0,0.05);
    box-shadow: 20px 0 50px rgba(0,0,0,0.1);
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    border-radius: 0 20px 20px 0;
  }
  .mobile-drawer.active { left: 0; }

  /* Premium Header */
  .mobile-drawer__header { 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
    padding: 24px 30px; 
    background: linear-gradient(to right, #f8fafc, #ffffff);
    border-bottom: 1px solid #f1f5f9;
    position: sticky;
    top: 0;
    z-index: 10;
  }
  .mobile-drawer__header .header-logo-text { font-size: 22px; font-weight: 800; color: #0f172a; }

  .mobile-drawer__close { 
    background: #f1f5f9;
    border: none; 
    color: #64748b; 
    cursor: pointer; 
    width: 36px; 
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }
  .mobile-drawer__close:hover { background: #e2e8f0; color: #0f172a; }

  /* Navigation Area */
  .mobile-drawer__nav { padding: 10px 0; }
  .mobile-drawer__list { list-style: none; padding: 0; margin: 0; }
  
  .mobile-drawer__item {
    border-bottom: 1px solid #f8fafc;
    padding: 0 30px;
    transition: background 0.2s;
  }
  .mobile-drawer__item:last-child { border-bottom: none; }

  .mobile-drawer__link { 
    color: #334155; 
    text-decoration: none; 
    font-size: 16px; 
    font-weight: 600; 
    display: block; 
    padding: 18px 0; 
    transition: color 0.2s; 
    flex: 1;
    letter-spacing: -0.01em;
  }
  .mobile-drawer__link:hover { color: #40c4ff; }

  /* Premium Toggle Button */
  .mobile-drawer__submenu-trigger {
    width: 32px !important; 
    height: 32px !important;
    background: #f8fafc !important; 
    color: #64748b;
    border-radius: 50%;
    margin-left: 10px;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  .mobile-drawer__submenu-trigger:hover, 
  .mobile-drawer__submenu.active ~ .mobile-drawer__submenu-trigger { /* Note: This selector won't work with current HTML structure, reliance on JS class toggle is better */ }
  
  .mobile-drawer__submenu-trigger svg { width: 14px; height: 14px; stroke-width: 2.5px; }

  /* Submenu Styling */
  .mobile-drawer__submenu {
    display: none;
    background: #f8fafc;
    margin: 0 -30px 0 -30px;
    padding: 15px 30px;
    border-top: 1px solid #f1f5f9;
    border-bottom: 1px solid #f1f5f9;
    box-shadow: inset 0 2px 6px rgba(0,0,0,0.02);
  }
  .mobile-drawer__submenu.active { display: block; animation: slideDown 0.3s ease-out forwards; }
  
  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-5px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .mobile-drawer__submenu .mobile-drawer__item { padding: 0; border: none; }
  .mobile-drawer__submenu .mobile-drawer__link {
    font-size: 14px;
    padding: 10px 0 10px 15px;
    font-weight: 500;
    color: #64748b;
    border-left: 2px solid transparent;
  }
  .mobile-drawer__submenu .mobile-drawer__link:hover {
    color: #0f172a;
    border-left-color: #40c4ff;
    background: linear-gradient(to right, rgba(64,196,255,0.05), transparent);
  }

  /* Modals */
  .search-modal {
    position: fixed; inset: 0; background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(6px); z-index: 2000; display: none; align-items: flex-start; justify-content: center; padding-top: 80px; opacity: 0; transition: opacity 0.3s ease;
  }
  .search-modal.active { display: flex; opacity: 1; }
  .search-modal__content { background: #ffffff; padding: 20px 25px; border-radius: 15px; width: 90%; max-width: 600px; position: relative; border: 1px solid rgba(0,0,0,0.1); box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15); }
  .search-modal__close { display: none; }
  .search-modal__close:hover { color: #0f172a; background: rgba(0,0,0,0.05); }
  .search-modal__form { display: flex; gap: 10px; }
  .search-modal__input { flex: 1; padding: 12px 20px; border: 1px solid #e2e8f0; border-radius: 10px; font-size: 16px; background: #f8fafc; color: #0f172a; }
  .search-modal__input:focus { border-color: #40c4ff; outline: none; }
  .search-modal__submit { background: #40c4ff; color: #0f172a; border: none; padding: 12px 25px; border-radius: 10px; font-weight: 700; cursor: pointer; transition: background 0.2s; }
  .search-modal__submit:hover { background: #81d4fa; }
  
  .predictive-search-results { margin-top: 20px; max-height: 400px; overflow-y: auto; display: none; }
  .predictive-search-results.has-results { display: block; }
  .predictive-search-item { display: flex; align-items: center; gap: 15px; padding: 12px 0; border-bottom: 1px solid #e2e8f0; text-decoration: none; color: #334155; }
  .predictive-search-item:hover { background-color: rgba(0,0,0,0.03); }
  .predictive-search-item img { width: 48px; height: 48px; object-fit: cover; border-radius: 8px; }
  .predictive-search-item__title { font-weight: 600; font-size: 14px; display: block; color: #0f172a; }
  .predictive-search-item__price { font-size: 13px; color: #64748b; }
</style>

