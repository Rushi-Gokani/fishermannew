  <div class="top-bar-left">
    {{ section.settings.top_bar_text }}
  </div>
  <div class="top-bar-right">
    {% if section.settings.top_bar_menu != blank %}
      <ul class="top-bar-menu">
        {% for link in section.settings.top_bar_menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    {% endif %}
    
    {% if section.settings.show_social %}
      <div class="top-bar-social">
        <!-- Social Icons Placeholders -->
        <a href="#"><svg viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg></a>
