{% schema %}
{
  "name": "Custom Header",
  "settings": [
    {
      "type": "header",
      "content": "Top Bar Settings"
    },
    {
      "type": "checkbox",
      "id": "show_top_bar",
      "label": "Show Top Bar",
      "default": true
    },
    {
      "type": "text",
      "id": "top_bar_text",
      "label": "Left Text",
      "default": "Free shipping on orders over €50"
    },
    {
      "type": "link_list",
      "id": "top_bar_menu",
      "label": "Top Bar Right Menu"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show Social Icons",
      "default": true
    },
    {
      "type": "color",
      "id": "top_bar_bg",
      "label": "Top Bar Background",
      "default": "#2563eb"
    },
    {
      "type": "color",
      "id": "top_bar_text_color",
      "label": "Top Bar Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Main Header Settings"
    },
    {
      "type": "color",
      "id": "header_bg",
      "label": "Header Background",
      "default": "#1e293b"
    },
    {
      "type": "color",
      "id": "header_text",
      "label": "Header Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo Width",
      "default": 150
    },
    {
      "type": "header",
      "content": "Categories Button"
    },
    {
      "type": "text",
      "id": "categories_label",
      "label": "Button Label",
      "default": "Categories"
    },
    {
      "type": "color",
      "id": "categories_bg",
      "label": "Button Background",
      "default": "#2563eb"
    },
    {
      "type": "color",
      "id": "categories_text",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu"
    },
    {
      "type": "text",
      "id": "badge_items",
      "label": "Menu Items with Badge (comma separated)",
      "default": "Offers, Sale",
      "info": "Case sensitive. Example: Offers, Sale"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "HOT!"
    },
    {
      "type": "color",
      "id": "badge_bg",
      "label": "Badge Background",
      "default": "#ff4500"
    },
    {
      "type": "header",
      "content": "Right Icons"
    },
    {
      "type": "checkbox",
      "id": "show_currency",
      "label": "Show Currency Selector",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "category_column",
      "name": "Category Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Column Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Header"
    }
  ]
}
{% endschema %}

<style>
  /* Top Bar */
  .custom-top-bar {
    background-color: {{ section.settings.top_bar_bg }};
    color: {{ section.settings.top_bar_text_color }};
    font-size: 12px;
    padding: 8px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .top-bar-left {
    font-weight: 500;
  }
  .top-bar-right {
    display: flex;
    gap: 20px;
    align-items: center;
  }
  .top-bar-menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 15px;
  }
  .top-bar-menu a {
    color: inherit;
    text-decoration: none;
  }
  .top-bar-social {
    display: flex;
    gap: 10px;
  }
  .top-bar-social svg {
    width: 14px;
    height: 14px;
    fill: currentColor;
  }

  /* Main Header */
  .custom-header-section {
    background-color: {{ section.settings.header_bg }};
    color: {{ section.settings.header_text }};
    position: relative;
    z-index: 1000;
  }

  .custom-header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 40px;
    max-width: 1600px;
    margin: 0 auto;
    gap: 20px;
  }

  /* Logo */
  .header-logo img {
    display: block;
    width: {{ section.settings.logo_width }}px;
    height: auto;
  }
  .header-logo-text {
    font-size: 24px;
    font-weight: bold;
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
  }

  /* Categories Button */
  .categories-wrapper {
    position: relative;
  }

  .categories-btn {
    background-color: {{ section.settings.categories_bg }};
    color: {{ section.settings.categories_text }};
    border: none;
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    transition: opacity 0.2s;
  }

  .categories-btn:hover {
    opacity: 0.9;
  }

  .categories-btn svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  /* Dropdown */
  .categories-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    color: #333;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    border-radius: 8px;
    padding: 30px;
    display: none; /* Hidden by default */
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    min-width: 800px; /* Wide dropdown */
    margin-top: 15px;
    z-index: 1001;
  }
  
  .categories-wrapper:hover .categories-dropdown {
    display: grid;
  }

  .dropdown-column h4 {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 15px;
    color: #111;
  }

  .dropdown-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .dropdown-column li {
    margin-bottom: 10px;
  }

  .dropdown-column a {
    text-decoration: none;
    color: #555;
    font-size: 14px;
    transition: color 0.2s;
  }

  .dropdown-column a:hover {
    color: {{ section.settings.categories_bg }};
  }

  /* Main Nav */
  .main-nav ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 25px;
  }

  .main-nav a {
    text-decoration: none;
    color: {{ section.settings.header_text }};
    font-weight: 500;
    font-size: 15px;
  }
  
  .main-nav a:hover {
    opacity: 0.8;
  }

  .hot-badge {
    background-color: {{ section.settings.badge_bg }};
    color: white;
    font-size: 10px;
    padding: 2px 6px;
    border-radius: 4px;
    margin-left: 5px;
    vertical-align: middle;
    font-weight: bold;
    text-transform: uppercase;
  }

  /* Right Icons */
  .header-icons {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .icon-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: {{ section.settings.header_text }};
    display: flex;
    align-items: center;
  }
  
  .icon-btn svg {
    width: 20px;
    height: 20px;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  .currency-selector {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
    cursor: pointer;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .main-nav {
      display: none; /* Hide main nav on smaller screens for now */
    }
    .categories-dropdown {
      min-width: 300px;
      grid-template-columns: 1fr;
    }
    .custom-header-container {
        padding: 15px 20px;
    }
    .custom-top-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }
    .top-bar-right {
        flex-wrap: wrap;
        justify-content: center;
    }
  }
</style>

{% if section.settings.show_top_bar %}
