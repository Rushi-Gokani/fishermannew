{% schema %}
{
  "name": "Custom Header",
  "settings": [
    {
      "type": "header",
      "content": "Top Bar Settings"
    },
    {
      "type": "checkbox",
      "id": "show_top_bar",
      "label": "Show Top Bar",
      "default": true
    },
    {
      "type": "text",
      "id": "top_bar_text",
      "label": "Left Text",
      "default": "Free shipping on orders over €50"
    },
    {
      "type": "link_list",
      "id": "top_bar_menu",
      "label": "Top Bar Right Menu"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show Social Icons",
      "default": true
    },
    {
      "type": "color",
      "id": "top_bar_bg",
      "label": "Top Bar Background",
      "default": "#2563eb"
    },
    {
      "type": "color",
      "id": "top_bar_text_color",
      "label": "Top Bar Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Main Header Settings"
    },
    {
      "type": "color",
      "id": "header_bg",
      "label": "Header Background",
      "default": "#1e293b"
    },
    {
      "type": "color",
      "id": "header_text",
      "label": "Header Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo Width",
      "default": 150
    },
    {
      "type": "header",
      "content": "Categories Button"
    },
    {
      "type": "text",
      "id": "categories_label",
      "label": "Button Label",
      "default": "Categories"
    },
    {
      "type": "color",
      "id": "categories_bg",
      "label": "Button Background",
      "default": "#2563eb"
    },
    {
      "type": "color",
      "id": "categories_text",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu"
    },
    {
      "type": "text",
      "id": "badge_items",
      "label": "Menu Items with Badge (comma separated)",
      "default": "Offers, Sale",
      "info": "Case sensitive. Example: Offers, Sale"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "HOT!"
    },
    {
      "type": "color",
      "id": "badge_bg",
      "label": "Badge Background",
      "default": "#ff4500"
    },
    {
      "type": "header",
      "content": "Sidebar Settings"
    },
    {
      "type": "color",
      "id": "sidebar_bg",
      "label": "Sidebar Background",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "sidebar_text",
      "label": "Sidebar Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "sidebar_active_bg",
      "label": "Active Item Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "sidebar_active_text",
      "label": "Active Item Text Color",
      "default": "#2563eb"
    },
    {
      "type": "header",
      "content": "Right Icons"
    },
    {
      "type": "checkbox",
      "id": "show_currency",
      "label": "Show Currency Selector",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "category_group",
      "name": "Category Group",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Sidebar Heading",
          "default": "Accessories"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Sidebar Link"
        },
        {
          "type": "header",
          "content": "Column 1"
        },
        {
          "type": "text",
          "id": "menu_1_heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu_1",
          "label": "Menu"
        },
        {
          "type": "header",
          "content": "Column 2"
        },
        {
          "type": "text",
          "id": "menu_2_heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu_2",
          "label": "Menu"
        },
        {
          "type": "header",
          "content": "Column 3"
        },
        {
          "type": "text",
          "id": "menu_3_heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu_3",
          "label": "Menu"
        },
        {
          "type": "header",
          "content": "Promo Card"
        },
        {
          "type": "image_picker",
          "id": "promo_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "promo_title",
          "label": "Title",
          "default": "TVs & Home Theater"
        },
        {
          "type": "text",
          "id": "promo_subtitle",
          "label": "Subtitle",
          "default": "Up to 30% off!"
        },
        {
          "type": "url",
          "id": "promo_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Header"
    }
  ]
}
{% endschema %}

<style>
  /* Top Bar */
  .custom-top-bar {
    background-color: {{ section.settings.top_bar_bg }};
    color: {{ section.settings.top_bar_text_color }};
    font-size: 12px;
    padding: 8px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .top-bar-left {
    font-weight: 500;
  }
  .top-bar-right {
    display: flex;
    gap: 20px;
    align-items: center;
  }
  .top-bar-menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 15px;
  }
  .top-bar-menu a {
    color: inherit;
    text-decoration: none;
  }
  .top-bar-social {
    display: flex;
    gap: 10px;
  }
  .top-bar-social svg {
    width: 14px;
    height: 14px;
    fill: currentColor;
  }

  /* Main Header */
  .custom-header-section {
    background-color: {{ section.settings.header_bg }};
    color: {{ section.settings.header_text }};
    position: relative;
    z-index: 1000;
  }

  .custom-header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 40px;
    max-width: 1600px;
    margin: 0 auto;
    gap: 20px;
  }

  /* Logo */
  .header-logo img {
    display: block;
    width: {{ section.settings.logo_width }}px;
    height: auto;
  }
  .header-logo-text {
    font-size: 24px;
    font-weight: bold;
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
  }

  /* Categories Button */
  .categories-wrapper {
    position: relative;
  }

  .categories-btn {
    background-color: {{ section.settings.categories_bg }};
    color: {{ section.settings.categories_text }};
    border: none;
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    transition: opacity 0.2s;
  }

  .categories-btn:hover {
    opacity: 0.9;
  }

  .categories-btn svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  /* Mega Menu Dropdown */
  .categories-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    color: #333;
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    border-radius: 8px;
    display: none; /* Hidden by default */
    min-width: 1000px; /* Increased width */
    margin-top: 15px;
    z-index: 1001;
    overflow: hidden;
    border: 1px solid #eee;
  }
  
  .categories-wrapper:hover .categories-dropdown {
    display: flex;
  }

  /* Sidebar */
  .dropdown-sidebar {
    background-color: {{ section.settings.sidebar_bg }};
    width: 280px; /* Slightly wider sidebar */
    flex-shrink: 0;
    padding: 10px 0;
    border-right: 1px solid #eee;
  }

  .sidebar-item {
    display: block;
    padding: 15px 25px; /* Larger click area */
    font-size: 15px;
    font-weight: 600;
    color: {{ section.settings.sidebar_text }};
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .sidebar-item:hover, .sidebar-item.active {
    background-color: {{ section.settings.sidebar_active_bg }};
    color: {{ section.settings.sidebar_active_text }};
  }
  
  .sidebar-item.active {
      background-color: {{ section.settings.sidebar_active_bg }};
      color: {{ section.settings.sidebar_active_text }};
  }

  /* Content Area */
  .dropdown-content-area {
    flex-grow: 1;
    background: white;
    position: relative;
    min-height: 500px; /* Increased height */
  }

  .content-panel {
    display: none;
    padding: 40px; /* More padding */
    width: 100%;
    height: 100%;
    /* Dynamic Grid Layout */
    grid-auto-flow: column;
    grid-auto-columns: 1fr;
    gap: 40px;
  }

  .content-panel.active {
    display: grid;
  }

  .panel-column h4 {
    font-size: 18px; /* Larger heading */
    font-weight: 700;
    margin-bottom: 20px;
    color: #111;
  }

  .panel-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .panel-column li {
    margin-bottom: 12px;
  }

  .panel-column a {
    text-decoration: none;
    color: #555;
    font-size: 15px; /* Larger text */
    transition: color 0.2s;
  }

  .panel-column a:hover {
    color: {{ section.settings.categories_bg }};
  }

  /* Promo Card */
  .promo-card {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    height: 100%; /* Fill available height in its column */
    min-height: 250px;
    max-height: 400px;
  }

  .promo-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .promo-overlay {
    position: absolute;
    bottom: 20px;
    left: 20px;
    right: 20px;
    background: white;
    padding: 20px;
    border-radius: 6px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .promo-title {
    font-weight: 700;
    font-size: 18px;
    color: #111;
    margin-bottom: 5px;
    display: block;
  }

  .promo-subtitle {
    font-size: 14px;
    color: #666;
  }

  /* Main Nav */
  .main-nav ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 25px;
  }

  .main-nav a {
    text-decoration: none;
    color: {{ section.settings.header_text }};
    font-weight: 500;
    font-size: 15px;
  }
  
  .main-nav a:hover {
    opacity: 0.8;
  }

  .hot-badge {
    background-color: {{ section.settings.badge_bg }};
    color: white;
    font-size: 10px;
    padding: 2px 6px;
    border-radius: 4px;
    margin-left: 5px;
    vertical-align: middle;
    font-weight: bold;
    text-transform: uppercase;
  }

  /* Right Icons */
  .header-icons {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .icon-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: {{ section.settings.header_text }};
    display: flex;
    align-items: center;
  }
  
  .icon-btn svg {
    width: 20px;
    height: 20px;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  .currency-selector {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
    cursor: pointer;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .main-nav {
      display: none; /* Hide main nav on smaller screens for now */
    }
    .categories-dropdown {
      min-width: 300px;
      flex-direction: column;
    }
    .dropdown-sidebar {
        width: 100%;
        border-right: none;
        border-bottom: 1px solid #eee;
    }
    .dropdown-content-area {
        display: none; /* Simplify for mobile for now, or use JS accordion */
    }
    .custom-header-container {
        padding: 15px 20px;
    }
    .custom-top-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }
    .top-bar-right {
        flex-wrap: wrap;
        justify-content: center;
    }
  }

  /* Search Modal */
  .search-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 2000;
    justify-content: center;
    align-items: flex-start;
    padding-top: 100px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .search-modal.active {
    display: flex;
    opacity: 1;
  }

  .search-modal__content {
    background: white;
    padding: 30px;
    border-radius: 8px;
    width: 90%;
    max-width: 600px;
    position: relative;
    transform: translateY(-20px);
    transition: transform 0.3s ease;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }

  .search-modal.active .search-modal__content {
    transform: translateY(0);
  }

  .search-modal__close {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 24px;
    color: #666;
    line-height: 1;
  }

  .search-modal__form {
    display: flex;
    gap: 10px;
  }

  .search-modal__input {
    flex: 1;
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .search-modal__submit {
    background-color: {{ section.settings.categories_bg }};
    color: white;
    border: none;
    padding: 12px 25px;
    border-radius: 4px;
    font-weight: 600;
    cursor: pointer;
  }

  /* Predictive Search Results */
  .predictive-search-results {
    margin-top: 15px;
    max-height: 300px;
    overflow-y: auto;
    border-top: 1px solid #eee;
    display: none; /* Hidden by default */
  }

  .predictive-search-results.has-results {
    display: block;
  }

  .predictive-search-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 10px 0;
    border-bottom: 1px solid #f5f5f5;
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s;
  }

  .predictive-search-item:hover {
    background-color: #f9f9f9;
  }

  .predictive-search-item img {
    width: 50px;
    height: 50px;
    object-fit: cover;
    border-radius: 4px;
  }

  .predictive-search-item__info {
    flex: 1;
  }

  .predictive-search-item__title {
    font-weight: 600;
    font-size: 14px;
    display: block;
    margin-bottom: 4px;
  }

  .predictive-search-item__price {
    font-size: 13px;
    color: #666;
  }

  .predictive-search-loading {
    text-align: center;
    padding: 20px;
    color: #888;
    font-size: 14px;
  }
</style>

{% if section.settings.show_top_bar %}
<div class="custom-top-bar">
  <div class="top-bar-left">
    {{ section.settings.top_bar_text }}
  </div>
  <div class="top-bar-right">
    {% if section.settings.top_bar_menu != blank %}
      <ul class="top-bar-menu">
        {% for link in section.settings.top_bar_menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    {% endif %}
    
    {% if section.settings.show_social %}
      <div class="top-bar-social">
        <!-- Social Icons Placeholders -->
        <a href="#"><svg viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg></a>
        <a href="#"><svg viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg></a>
      </div>
    {% endif %}
  </div>
</div>
{% endif %}

<div class="custom-header-section">
  <div class="custom-header-container">
    
    <!-- Logo -->
    <div class="header-logo">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo != blank %}
          {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag: loading: 'eager' }}
        {% else %}
          <span class="header-logo-text">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <!-- Categories Button & Dropdown -->
    <div class="categories-wrapper">
      <button class="categories-btn">
        {{ section.settings.categories_label }}
        <svg viewBox="0 0 24 24"><path d="M7 10l5 5 5-5z"/></svg>
      </button>

      <div class="categories-dropdown">
        <!-- Sidebar -->
        <div class="dropdown-sidebar">
          {% for block in section.blocks %}
            {% if block.type == 'category_group' %}
              <div class="sidebar-item {% if forloop.first %}active{% endif %}" data-target="panel-{{ block.id }}">
                {{ block.settings.heading }}
                {% if block.settings.menu_1 != blank or block.settings.menu_2 != blank or block.settings.promo_image != blank %}
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <!-- Content Area -->
        <div class="dropdown-content-area">
          {% for block in section.blocks %}
            {% if block.type == 'category_group' %}
              <div class="content-panel {% if forloop.first %}active{% endif %}" id="panel-{{ block.id }}">
                
                <!-- Column 1 -->
                {% if block.settings.menu_1 != blank or block.settings.menu_1_heading != blank %}
                <div class="panel-column">
                  {% if block.settings.menu_1_heading != blank %}
                    <h4>{{ block.settings.menu_1_heading }}</h4>
                  {% endif %}
                  {% if block.settings.menu_1 != blank %}
                    <ul>
                      {% for link in block.settings.menu_1.links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
                {% endif %}

                <!-- Column 2 -->
                {% if block.settings.menu_2 != blank or block.settings.menu_2_heading != blank %}
                <div class="panel-column">
                  {% if block.settings.menu_2_heading != blank %}
                    <h4>{{ block.settings.menu_2_heading }}</h4>
                  {% endif %}
                  {% if block.settings.menu_2 != blank %}
                    <ul>
                      {% for link in block.settings.menu_2.links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
                {% endif %}

                <!-- Column 3 -->
                {% if block.settings.menu_3 != blank or block.settings.menu_3_heading != blank %}
                <div class="panel-column">
                  {% if block.settings.menu_3_heading != blank %}
                    <h4>{{ block.settings.menu_3_heading }}</h4>
                  {% endif %}
                  {% if block.settings.menu_3 != blank %}
                    <ul>
                      {% for link in block.settings.menu_3.links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
                {% endif %}

                <!-- Promo Card -->
                {% if block.settings.promo_image != blank %}
                <div class="panel-column">
                    <a href="{{ block.settings.promo_link | default: '#' }}" class="promo-card-link">
                        <div class="promo-card">
                        {{ block.settings.promo_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
                        <div class="promo-overlay">
                            <span class="promo-title">{{ block.settings.promo_title }}</span>
                            <span class="promo-subtitle">{{ block.settings.promo_subtitle }}</span>
                        </div>
                        </div>
                    </a>
                </div>
                {% endif %}

              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Main Navigation -->
    <nav class="main-nav">
      <ul>
        {% assign badge_items_arr = section.settings.badge_items | split: ', ' %}
        {% for link in section.settings.main_menu.links %}
          <li>
            <a href="{{ link.url }}">
              {{ link.title }}
              {% if badge_items_arr contains link.title %}
                <span class="hot-badge">{{ section.settings.badge_text }}</span>
              {% endif %}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Right Icons -->
    <div class="header-icons">
      {% if section.settings.show_currency %}
      <div class="currency-selector">
        <span>GR (EUR €)</span>
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
      </div>
      {% endif %}

      <button class="icon-btn search-trigger" aria-label="Search">
        <svg viewBox="0 0 24 24"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
      </button>
      
      <a href="{{ routes.account_url }}" class="icon-btn" aria-label="Account">
        <svg viewBox="0 0 24 24"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
      </a>

      <a href="{{ routes.cart_url }}" class="icon-btn" aria-label="Cart">
        <svg viewBox="0 0 24 24"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
      </a>
    </div>

  </div>

  <!-- Search Modal HTML -->
  <div class="search-modal" id="searchModal">
    <div class="search-modal__content">
      <button class="search-modal__close" aria-label="Close search">&times;</button>
      <form action="{{ routes.search_url }}" method="get" role="search" class="search-modal__form">
        <input
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="Search our store..."
          class="search-modal__input"
          required
        >
        <input type="hidden" name="type" value="product">
        <button type="submit" class="search-modal__submit">Search</button>
      </form>
      <div id="predictive-search-results" class="predictive-search-results"></div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Search Modal Logic
    const searchTrigger = document.querySelector('.search-trigger');
    const searchModal = document.getElementById('searchModal');
    const searchClose = document.querySelector('.search-modal__close');
    const searchInput = document.querySelector('.search-modal__input');
    const predictiveSearchResults = document.getElementById('predictive-search-results');

    if (searchTrigger && searchModal) {
      searchTrigger.addEventListener('click', function(e) {
        e.preventDefault();
        searchModal.classList.add('active');
        setTimeout(() => searchInput.focus(), 100); // Focus input
      });

      const closeModal = () => {
        searchModal.classList.remove('active');
        predictiveSearchResults.innerHTML = ''; // Clear results on close
        predictiveSearchResults.classList.remove('has-results');
        searchInput.value = '';
      };

      if (searchClose) {
        searchClose.addEventListener('click', closeModal);
      }

      // Close on background click
      searchModal.addEventListener('click', function(e) {
        if (e.target === searchModal) {
          closeModal();
        }
      });

      // Close on Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && searchModal.classList.contains('active')) {
          closeModal();
        }
      });

      // Predictive Search Logic
      let debounceTimer;
      searchInput.addEventListener('input', function(e) {
        const query = this.value.trim();
        clearTimeout(debounceTimer);

        if (query.length === 0) {
          predictiveSearchResults.innerHTML = '';
          predictiveSearchResults.classList.remove('has-results');
          return;
        }

        debounceTimer = setTimeout(() => {
          fetchSuggestions(query);
        }, 300);
      });

      function fetchSuggestions(query) {
        predictiveSearchResults.innerHTML = '<div class="predictive-search-loading">Loading...</div>';
        predictiveSearchResults.classList.add('has-results');

        fetch(`/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=4`)
          .then(response => response.json())
          .then(data => {
            const products = data.resources.results.products;
            if (products.length > 0) {
              renderResults(products);
            } else {
              predictiveSearchResults.innerHTML = '<div class="predictive-search-loading">No results found.</div>';
            }
          })
          .catch(error => {
            console.error('Error fetching suggestions:', error);
            predictiveSearchResults.innerHTML = '<div class="predictive-search-loading">Error loading results.</div>';
          });
      }

      function renderResults(products) {
        let html = '';
        products.forEach(product => {
          html += `
            <a href="${product.url}" class="predictive-search-item">
              ${product.image ? `<img src="${product.image}" alt="${product.title}">` : ''}
              <div class="predictive-search-item__info">
                <span class="predictive-search-item__title">${product.title}</span>
                <span class="predictive-search-item__price">${product.price}</span>
              </div>
            </a>
          `;
        });
        predictiveSearchResults.innerHTML = html;
      }
    }

    const sidebarItems = document.querySelectorAll('.sidebar-item');
    const contentPanels = document.querySelectorAll('.content-panel');

    sidebarItems.forEach(item => {
      item.addEventListener('mouseenter', function() {
        // Remove active class from all
        sidebarItems.forEach(i => i.classList.remove('active'));
        contentPanels.forEach(p => p.classList.remove('active'));

        // Add active class to current
        this.classList.add('active');
        const targetId = this.getAttribute('data-target');
        const targetPanel = document.getElementById(targetId);
        if (targetPanel) {
          targetPanel.classList.add('active');
        }
      });
    });
  });
</script>
