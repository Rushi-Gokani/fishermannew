<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

  .custom-top-bar,
  .custom-header-section {
    font-family: 'Space Grotesk', 'Space Mono', sans-serif;
    letter-spacing: 0.01em;
  }

  /* Top Bar */
  .custom-top-bar {
    background: linear-gradient(110deg, {{ section.settings.top_bar_bg }} 0%, {{ section.settings.top_bar_bg | color_mix: '#ffffff', 15 }} 55%, {{ section.settings.top_bar_bg | color_mix: '#000000', 10 }} 100%);
    color: {{ section.settings.top_bar_text_color }};
    font-size: 11px;
    text-transform: uppercase;
    padding: 10px 56px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  }
  .top-bar-left {
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .top-bar-right {
    display: flex;
    gap: 24px;
    align-items: center;
  }
  .top-bar-menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 15px;
  }
  .top-bar-menu a {
    color: inherit;
    text-decoration: none;
  }
  .top-bar-social {
    display: flex;
    gap: 10px;
  }
  .top-bar-social svg {
    width: 14px;
    height: 14px;
    fill: currentColor;
  }

  /* Main Header */
  .custom-header-section {
    background: linear-gradient(115deg,
        {{ section.settings.header_bg }} 0%,
        {{ section.settings.header_bg }} 45%,
        {{ section.settings.header_bg | color_mix: '#050f1f', 65 }} 100%
      );
    color: {{ section.settings.header_text }};
    position: relative;
    z-index: 1000;
    padding: 16px 0 20px;
    overflow: visible;
  }

  .custom-header-section::before {
    content: '';
    position: absolute;
    border-radius: 999px;
    filter: blur(0px);
    opacity: 0.35;
    z-index: 0;
  }

  .custom-header-section::before {
    width: 360px;
    height: 360px;
    top: -140px;
    left: -140px;
    background: radial-gradient(circle, {{ section.settings.categories_bg | color_desaturate: 20 | color_lighten: 10 }} 0%, transparent 70%);
  }

  .custom-header-container {
    width: 100%;
    margin: 0 auto;
    padding: 0px 28px;
    display: flex;
    align-items: center;
    gap: 18px;
    position: relative;
    z-index: 1;
  }

  /* Branding */
  .header-branding {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .nav-cluster {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 6px 14px;
    border-radius: 999px;
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.08);
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.05);
    margin: auto;
  }

  .nav-cluster .categories-wrapper {
    flex-shrink: 0;
  }

  .nav-cluster .main-nav {
    flex: 1;
    display: flex;
    min-width: 0;
  }

  .header-logo img {
    display: block;
    width: {{ section.settings.logo_width }}px;
    height: auto;
  }
  .header-logo-text {
    font-size: 22px;
    font-weight: 700;
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.12em;
  }

  /* Categories Button */
  .categories-wrapper {
    position: relative;
    isolation: isolate;
    display: flex;
    align-items: center;
  }

  .categories-wrapper::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 100%;
    height: 26px;
    pointer-events: auto;
  }

  .categories-btn {
    background: linear-gradient(120deg, {{ section.settings.categories_bg }} 0%, {{ section.settings.categories_bg | color_lighten: 12 }} 100%);
    color: {{ section.settings.categories_text }};
    border: none;
    padding: 12px 24px;
    border-radius: 999px;
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    box-shadow: 0 12px 25px rgba(15, 23, 42, 0.35);
    transition: transform 0.2s ease, box-shadow 0.2s ease, opacity 0.2s ease;
  }

  .categories-btn:hover,
  .categories-btn:focus-visible {
    transform: translateY(-2px);
    opacity: 0.95;
    box-shadow: 0 16px 32px rgba(15, 23, 42, 0.5);
  }

  .categories-btn svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  /* Mega Menu Dropdown */
  .categories-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(18px);
    color: #111827;
    box-shadow: 0 25px 60px rgba(15, 23, 42, 0.18);
    border-radius: 24px;
    display: none; /* Hidden by default */
    min-width: 1000px; /* Increased width */
    margin-top: 15px;
    z-index: 1001;
    overflow: hidden;
    border: 1px solid rgba(226, 232, 240, 0.9);
  }
  
  .categories-wrapper:hover .categories-dropdown,
  .categories-wrapper:focus-within .categories-dropdown,
  .categories-wrapper.is-open .categories-dropdown {
    display: flex;
  }

  /* Sidebar */
  .dropdown-sidebar {
    background: linear-gradient(180deg, rgba(248,250,252,1), rgba(248,250,252,0.5));
    width: 260px; /* Slightly wider sidebar */
    flex-shrink: 0;
    padding: 18px 0;
    border-right: 1px solid rgba(226, 232, 240, 0.9);
  }

  .sidebar-item {
    display: block;
    padding: 16px 28px; /* Larger click area */
    font-size: 14px;
    font-weight: 600;
    color: rgba(15,23,42,0.6);
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .sidebar-item:hover, .sidebar-item.active {
    background: rgba(15,23,42,0.08);
    color: #0f172a;
  }
  
  .sidebar-item.active {
      background: rgba(15,23,42,0.12);
      color: #0f172a;
  }

  /* Content Area */
  .dropdown-content-area {
    flex-grow: 1;
    background: rgba(255,255,255,0.85);
    position: relative;
    min-height: 480px; /* Increased height */
    padding-block: 12px;
  }

  .content-panel {
    display: none;
    padding: 32px 40px; /* More padding */
    width: 100%;
    height: 100%;
    /* Dynamic Grid Layout */
    grid-auto-flow: column;
    grid-auto-columns: 1fr;
    gap: 34px;
  }

  .content-panel.active {
    display: grid;
  }

  .panel-column h4 {
    font-size: 16px; /* Larger heading */
    font-weight: 600;
    margin-bottom: 12px;
    color: #0f172a;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .panel-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .panel-column li {
    margin-bottom: 12px;
  }

  .panel-column a {
    text-decoration: none;
    color: #243047;
    font-size: 14px; /* Larger text */
    transition: color 0.2s;
  }

  .panel-column a:hover {
    color: {{ section.settings.categories_bg }};
  }

  /* Promo Card */
  .promo-card {
    position: relative;
    border-radius: 18px;
    overflow: hidden;
    height: 100%; /* Fill available height in its column */
    min-height: 250px;
    max-height: 400px;
    box-shadow: 0 18px 40px rgba(15,23,42,0.18);
  }

  .promo-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .promo-overlay {
    position: absolute;
    bottom: 20px;
    left: 20px;
    right: 20px;
    background: rgba(255, 255, 255, 0.92);
    padding: 18px;
    border-radius: 12px;
    box-shadow: 0 18px 40px rgba(15,23,42,0.22);
    color: #0f172a;
  }

  .promo-title {
    font-weight: 600;
    font-size: 18px;
    color: #0f172a;
    margin-bottom: 5px;
    display: block;
  }

  .promo-subtitle {
    font-size: 13px;
    color: rgba(15,23,42,0.7);
  }

  /* Main Nav & Mega Menu */
  .main-nav {
    flex: 1;
    position: relative;
    display: flex;
    justify-content: flex-start;
  }

  .mega-nav__list {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 24px;
    list-style: none;
    padding: 0 4px;
    margin: 0;
  }

  .mega-nav__item {
    position: relative;
  }

  .mega-nav__link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: rgba(255,255,255,0.85);
    font-weight: 600;
    font-size: 15px;
    letter-spacing: 0.02em;
    padding-bottom: 4px;
    border-bottom: 2px solid transparent;
    transition: color 0.2s ease, border-color 0.2s ease;
  }

  .mega-nav__item--has-children .mega-nav__link svg {
    width: 12px;
    height: 12px;
    stroke: currentColor;
    stroke-width: 2;
  }

  .mega-nav__item:hover > .mega-nav__link,
  .mega-nav__item.open > .mega-nav__link {
    color: #ffffff;
    border-color: {{ section.settings.categories_bg }};
  }

  .hot-badge {
    background-color: {{ section.settings.badge_bg }};
    color: white;
    font-size: 10px;
    padding: 2px 6px;
    border-radius: 999px;
    margin-left: 3px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .mega-panel {
    position: absolute;
    left: 50%;
    top: calc(100% + 18px);
    transform: translateX(-50%) translateY(10px);
    min-width: 760px;
    max-width: 1040px;
    background: radial-gradient(circle at top left, rgba(255,255,255,0.1), rgba(15,23,42,0.95));
    border-radius: 28px;
    padding: 32px;
    box-shadow: 0 30px 80px rgba(15, 23, 42, 0.45);
    backdrop-filter: blur(16px);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.25s ease, transform 0.25s ease;
    z-index: 30;
  }

  .mega-panel::after {
    content: '';
    position: absolute;
    inset: 1px;
    border-radius: 26px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    pointer-events: none;
  }

  .mega-nav__item.open > .mega-panel,
  .mega-nav__item--has-children:hover > .mega-panel {
    opacity: 1;
    pointer-events: auto;
    transform: translateX(-50%) translateY(0px);
  }

  .mega-panel__inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .mega-panel__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 24px;
  }

  .mega-panel__eyebrow {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255,255,255,0.6);
    margin: 0 0 6px;
  }

  .mega-panel__title {
    font-size: 26px;
    font-weight: 700;
    margin: 0;
    color: #fff;
  }

  .mega-panel__cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 18px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.2);
    color: #fff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    transition: border-color 0.2s ease, color 0.2s ease;
  }

  .mega-panel__cta svg {
    width: 14px;
    height: 14px;
    stroke: currentColor;
    stroke-width: 2;
  }

  .mega-panel__cta:hover {
    border-color: {{ section.settings.categories_bg }};
    color: {{ section.settings.categories_bg }};
    background: rgba(255,255,255,0.05);
  }

  .mega-panel__body {
    display: grid;
    grid-template-columns: minmax(0, 3fr) minmax(240px, 1fr);
    gap: 32px;
    align-items: stretch;
  }

  .mega-panel__columns {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 24px;
  }

  .mega-panel__column ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .mega-panel__column a {
    color: rgba(255,255,255,0.95);
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .mega-panel__column a:hover {
    color: {{ section.settings.categories_bg }};
  }

  .mega-panel__sublist {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 6px;
  }

  .mega-panel__sublist a {
    font-size: 12px;
    font-weight: 500;
    padding: 4px 10px;
    border-radius: 999px;
    background: rgba(255,255,255,0.08);
    color: rgba(255,255,255,0.85);
  }

  .mega-panel__feature-card {
    position: relative;
    border-radius: 20px;
    padding: 32px;
    background: linear-gradient(135deg, {{ section.settings.categories_bg }}, #0f172a 85%);
    color: white;
    overflow: hidden;
    box-shadow: inset 0 0 0 1px rgba(255,255,255,0.08);
  }

  .mega-panel__feature-card::after {
    content: '';
    position: absolute;
    inset: 16px;
    border-radius: 16px;
    border: 1px dashed rgba(255,255,255,0.25);
    opacity: 0.25;
  }

  .feature-label {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin: 0 0 12px;
    color: rgba(255,255,255,0.8);
  }

  .feature-headline {
    font-size: 24px;
    margin: 0 0 10px;
    font-weight: 700;
  }

  .feature-copy {
    font-size: 14px;
    margin: 0 0 20px;
    color: rgba(255,255,255,0.85);
  }

  .feature-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: white;
    text-decoration: none;
    font-weight: 600;
  }

  .feature-link svg {
    width: 16px;
    height: 16px;
    stroke: currentColor;
    stroke-width: 2;
  }

  .feature-link:hover {
    opacity: 0.85;
  }

  /* Right Icons */
  .header-icons {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: rgba(255,255,255,0.9);
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid rgba(226, 232, 240, 0.9);
    box-shadow: 0 6px 18px rgba(15, 23, 42, 0.18);
    margin-left: auto;
  }

  .icon-btn {
    background: #ffffff;
    border: 1px solid rgba(226, 232, 240, 0.9);
    cursor: pointer;
    color: #0f172a;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    transition: transform 0.2s ease, border-color 0.2s, color 0.2s;
  }

  .icon-btn:hover {
    transform: translateY(-1px);
    border-color: {{ section.settings.categories_bg }};
    color: {{ section.settings.categories_bg }};
  }
  
  .icon-btn svg {
    width: 20px;
    height: 20px;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  .currency-selector {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    cursor: pointer;
    padding: 8px 14px;
    border-radius: 999px;
    background: #ffffff;
    border: 1px solid rgba(226, 232, 240, 0.9);
    color: #0f172a;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .main-nav {
      display: none; /* Hide main nav on smaller screens for now */
    }
    .categories-dropdown {
      min-width: 300px;
      flex-direction: column;
    }
    .dropdown-sidebar {
        width: 100%;
        border-right: none;
        border-bottom: 1px solid #eee;
    }
    .dropdown-content-area {
        display: none; /* Simplify for mobile for now, or use JS accordion */
    }
    .custom-header-container {
        padding: 15px 20px;
    }
    .custom-top-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }
    .top-bar-right {
        flex-wrap: wrap;
        justify-content: center;
    }
    .mega-panel {
