{% comment %}
  Custom Footer Section with Wave Video Animation
  Features: 4-column layout, newsletter signup, social links, contact info, quick links, policies
{% endcomment %}

{% assign section_settings = section.settings %}

<footer class="custom-footer" data-section-id="{{ section.id }}">
  <div class="custom-footer__container">
    <div class="custom-footer__inner">
      <!-- Column 1: Logo + Newsletter -->
      <div class="custom-footer__column custom-footer__column--newsletter">
        <div class="custom-footer__logo">
          {%- if section_settings.logo_image != blank -%}
            <div class="custom-footer__logo-image">
              <img src="{{ section_settings.logo_image | image_url: width: 400 }}" alt="{{ section.settings.logo_image.alt | default: shop.name }}" loading="lazy">
            </div>
          {%- else -%}
            <div class="custom-footer__logo-icon">
              <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <circle cx="50" cy="50" r="45" fill="white" stroke="#8cc8b8" stroke-width="2"/>
                <path d="M30 50 Q40 30, 50 50 T70 50" stroke="#8cc8b8" stroke-width="3" fill="none"/>
                <circle cx="35" cy="45" r="3" fill="#8cc8b8"/>
              </svg>
            </div>
            <div class="custom-footer__logo-text">
              <span class="custom-footer__logo-main">{{ section_settings.logo_main_text }}</span>
              <span class="custom-footer__logo-sub">{{ section_settings.logo_sub_text }}</span>
            </div>
          {%- endif -%}
        </div>

        <div class="custom-footer__newsletter">
          <p class="custom-footer__newsletter-text">{{ section_settings.newsletter_text }}</p>
          <form class="custom-footer__newsletter-form">
            <input
              type="email"
              class="custom-footer__newsletter-input"
              placeholder="{{ section_settings.email_placeholder }}"
              required
            >
            <button type="submit" class="custom-footer__newsletter-button">
              {{ section_settings.button_text }}
            </button>
          </form>
          <p class="custom-footer__legal">{{ section_settings.legal_text }}</p>
        </div>
      </div>

      <!-- Column 2: Follow Us -->
      <div class="custom-footer__column">
        <h3 class="custom-footer__heading">{{ section_settings.follow_heading }}</h3>
        <div class="custom-footer__social-links">
          {% if section_settings.facebook_url != blank %}
            <a href="{{ section_settings.facebook_url }}" target="_blank" rel="noopener noreferrer" class="custom-footer__social-link" aria-label="Facebook">
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
          {% if section_settings.instagram_url != blank %}
            <a href="{{ section_settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="custom-footer__social-link" aria-label="Instagram">
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          {% endif %}
          {% if section_settings.youtube_url != blank %}
            <a href="{{ section_settings.youtube_url }}" target="_blank" rel="noopener noreferrer" class="custom-footer__social-link" aria-label="YouTube">
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Column 3: Contact Us -->
      <div class="custom-footer__column">
        <h3 class="custom-footer__heading">{{ section_settings.contact_heading }}</h3>
        <div class="custom-footer__contact-links">
          {% if section_settings.phone_number != blank %}
            <a href="tel:{{ section_settings.phone_number | replace: ' ', '' }}" class="custom-footer__contact-link">
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
