  "name": "Custom Footer with Waves",
  "class": "section-wrapper",
  "tag": "footer",
  "settings": [
    {
      "type": "header",
      "content": "Wave Animation"
    },
    {
      "type": "paragraph",
      "content": "The footer includes a beautiful animated wave effect at the bottom using pure CSS. No video needed!"
    },
