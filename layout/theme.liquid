<!doctype html>
<html
  {% if request.design_mode %}
    class="shopify-design-mode"
  {% endif %}
  lang="{{ request.locale.iso_code }}"
>
  <head>
    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    {% if settings.transition_to_main_product or settings.page_transition_enabled %}
      <link
        rel="expect"
        href="#MainContent"
        blocking="render"
        id="view-transition-render-blocker"
      >
    {% endif %}

    {%- render 'meta-tags' -%}
    {%- render 'stylesheets' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    <script src="https://bridge.shopflo.com/js/shopflo.bundle.js" async></script>
    {{ content_for_header }}
  </head>

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script>
      // Inline header height calculation to prevent layout shift
      // Note: Updates in calculateHeaderGroupHeight() and updateTransparentHeaderOffset()utilities.js should be kept in sync with this function
      (function setHeaderHeighCustomProperties() {
        /*
         * Header calculation functions for maintaining CSS variables
         * Mimic calculateHeaderGroupHeight() in utilities.js
         */
        const header = document.querySelector('header-component');
        const headerGroup = document.querySelector('#header-group');
        const hasHeaderSection = headerGroup?.querySelector('.header-section');

        if (!header || !headerGroup) return;

        const headerHeight = header.offsetHeight;

        // Calculate the total height of the header group
        let headerGroupHeight = 0;
        const children = headerGroup.children;
        for (let i = 0; i < children.length; i++) {
          const element = children[i];
          if (element === header || !(element instanceof HTMLElement)) continue;
          headerGroupHeight += element.offsetHeight;
        }

        // Check for transparent header special case
        if (header.hasAttribute('transparent') && header.parentElement?.nextElementSibling) {
          headerGroupHeight += headerHeight;
        }

        // Set CSS variables
        document.body.style.setProperty('--header-height', `${headerHeight}px`);
        document.body.style.setProperty('--header-group-height', `${headerGroupHeight}px`);

        /**
         * Updates CSS custom properties for transparent header offset calculation
         * Mimic updateTransparentHeaderOffset() in utilities.js
         */

        if (!hasHeaderSection || !header?.hasAttribute('transparent')) {
          document.body.style.setProperty('--transparent-header-offset-boolean', '0');
          return;
        }

        const hasImmediateSection = hasHeaderSection.nextElementSibling?.classList.contains('shopify-section');

        const shouldApplyOffset = !hasImmediateSection ? '1' : '0';
        document.body.style.setProperty('--transparent-header-offset-boolean', shouldApplyOffset);
      })();
    </script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}
    <script>
      (function initFloBuyNowToggle() {
        // Expose functions globally
        window.handleFloCheckoutBtn = function() {
           if (window.Shopflo && window.Shopflo.openFloCheckout) {
              window.Shopflo.openFloCheckout();
           } else {
              window.location.href = '/checkout';
           }
        };

        window.handleFloBuyNowBtn = function(event) {
            if (event) {
                event.preventDefault();
                event.stopPropagation();
                if (event.stopImmediatePropagation) event.stopImmediatePropagation();
            }
            
            const button = event.currentTarget || event.target;
            let variantId = button ? button.dataset.variantId : null;

            // Fallback: Attempt to find the form and variant ID if not on the button
            if (!variantId && button) {
                const form = button.closest('form') || document.querySelector('form[action*="/cart/add"]');
                if (form) {
                    const variantInput = form.querySelector('[name="id"]');
                    if (variantInput) variantId = variantInput.value;
                }
            }

            if (!variantId && window.location.search) {
                 const urlParams = new URLSearchParams(window.location.search);
                 variantId = urlParams.get('variant');
            }
             // Fallback for product page if meta is available
            if (!variantId && window.product && window.product.dataset && window.product.dataset.selectedVariantId) {
                variantId = window.product.dataset.selectedVariantId;
            }

            if (variantId && window.Shopflo && window.Shopflo.checkout) {
                const payload = [{ variantId: parseInt(variantId), quantity: 1 }];
                console.log('Shopflo Checkout Payload:', payload);
                window.Shopflo.checkout(payload).catch(err => {
                    console.error('Shopflo Checkout Error:', err);
                });
            } else if (variantId) {
                 // Fallback if Shopflo not ready but we have variant
                 window.location.href = '/cart/' + variantId + ':1';
            } else {
                 // Final fallback
                 window.location.href = '/checkout';
            }
            return false;
        };

        let observerInstance;
        // Changed to class selector to support multiple buttons (product cards + main product)
        const floButtonSelector = '.flo-buy-now-button'; 
        const addButtonSelector = 'button[name="add"]';
        let variantListenerAttached = false;

        function toggleFloButton(addButton, floButtons) {
          if (!floButtons || floButtons.length === 0 || !addButton) {
            return;
          }

          const isVariantAvailable = !addButton.disabled;
          floButtons.forEach(btn => {
              btn.style.setProperty('display', isVariantAvailable ? 'block' : 'none', 'important');
          });
        }

        function handleVariantChange() {
          // Re-query buttons as they might be dynamic
          const floButtons = document.querySelectorAll(floButtonSelector);
          const addButton = document.querySelector(addButtonSelector);
          toggleFloButton(addButton, floButtons);
        }

        function initializeObserver() {
          if (observerInstance) {
            observerInstance.disconnect();
            observerInstance = null;
          }

          const floButtons = document.querySelectorAll(floButtonSelector);
          const addButton = document.querySelector(addButtonSelector);

          if (!floButtons.length || !addButton) {
            return;
          }

          toggleFloButton(addButton, floButtons);

          observerInstance = new MutationObserver(() => toggleFloButton(addButton, floButtons));
          observerInstance.observe(addButton, { attributes: true, attributeFilter: ['disabled'] });

          if (!variantListenerAttached) {
            document.addEventListener('variant:changed', handleVariantChange);
            variantListenerAttached = true;
          }
        }

        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initializeObserver);
        } else {
          initializeObserver();
        }

        document.addEventListener('shopify:section:load', initializeObserver);
        document.addEventListener('shopify:section:unload', initializeObserver);
        document.addEventListener('shopify:section:select', initializeObserver);
        document.addEventListener('shopify:block:select', initializeObserver);
      })();
    </script>
  </body>
</html>
